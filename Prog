                    break;
                case 4:
                    Console.Clear();
                    MenuPrincipal();
                    break;

                default:
                    //Console.Clear();
                    Console.WriteLine("A opção que selecionaste não existe!");
                    Console.WriteLine("");
                    MenuAdmin();
                    break;


            }
            Console.WriteLine("");
        }
